@model Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="card p-4">
    <h1>Delete Client</h1>
    <h4>Are you sure you want to delete this client?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Client ID:</dt>
        <dd class="col-sm-9">@Model.Client_Id</dd>
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Address:</dt>
        <dd class="col-sm-9">@Model.Address</dd>
        <dt class="col-sm-3">Phone:</dt>
        <dd class="col-sm-9">@Model.Phone</dd>
        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>
    <form method="post" asp-action="DeleteConfirmed" asp-route-clientId="@Model.Client_Id" class="mt-4">
        <div class="form-group">
            <input type="submit" value="Confirm Delete" class="btn btn-primary" />
            <a asp-action="GetAllClients" class="btn btn-primary ml-2">Cancel</a>
        </div>
    </form>
</div>