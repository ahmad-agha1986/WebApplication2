@{
    ViewData["Title"] = "Admin Page";
}
<h1 class="welcome-msg">@ViewBag.UserName</h1>


<div class="logout-button">
    <a class="btn btn-primary" href="@Url.Action("Logout", "Account")">Logout</a>
</div>


<style>

    .welcome-msg {
        font-size: 15px;
        position: absolute;
        right: 10px;
        top: 30px;
        color: orangered;
        font-style: italic;
    }



    .logout-button {
        position: absolute;
        right: 0;
        top: 40px;
        padding: 15px 25px;
        font-size: 16px;
    }
</style>


<div class="container-fluid mt-4">
    <h2 class="text-center mb-4"> Admin Dashboard</h2>
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Registration</h5>
                    <p class="card-text">Register a new user account.</p>
                    <a href="@Url.Action("RegisterView", "Account")" class="btn btn-primary">Go to User Registration</a>
                </div>
            </div>
        </div>
    </div>
</div>